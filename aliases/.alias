####################
# Package Managers
####################
# apt
${USER_CONFIGS_BASE_PATH}/scripts/is_installed.sh apt && [[ -f ${USER_CONFIGS_ALIASES_PATH}/.apt ]] && source ${USER_CONFIGS_ALIASES_PATH}/.apt

# dpkg
${USER_CONFIGS_BASE_PATH}/scripts/is_installed.sh dpkg && [[ -f ${USER_CONFIGS_ALIASES_PATH}/.dpkg ]] && source ${USER_CONFIGS_ALIASES_PATH}/.dpkg

# pip
${USER_CONFIGS_BASE_PATH}/scripts/is_installed.sh pip3 && [[ -f ${USER_CONFIGS_ALIASES_PATH}/.pip ]] && source ${USER_CONFIGS_ALIASES_PATH}/.pip

# brew
${USER_CONFIGS_BASE_PATH}/scripts/is_installed.sh brew && [[ -f ${USER_CONFIGS_ALIASES_PATH}/.brew ]] && source ${USER_CONFIGS_ALIASES_PATH}/.brew

# gem
${USER_CONFIGS_BASE_PATH}/scripts/is_installed.sh gem && [[ -f ${USER_CONFIGS_ALIASES_PATH}/.gem ]] && source ${USER_CONFIGS_ALIASES_PATH}/.gem
