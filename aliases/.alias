# SSH
sgen() {
    echo ''
    echo '########################################'
    echo Creating ssh key $2
    echo '########################################'

    if [ -z ${2+x} ];
    then
        if [ -z ${1+x} ];
        then
            ssh-keygen
        else
            ssh-keygen -t ed25519 -N '' -f ~/.ssh/$1
        fi
    else
        ssh-keygen -t ed25519 -N '' -f ~/.ssh/$2-$1
        ssh-keygen -t ed25519 -N '' -f ~/.ssh/$2-$1
        scop $1 $2
    fi
}

scop() {
    echo ''
    echo '########################################'
    echo Copying ssh key $1@$2
    echo '########################################'

    if [ -z ${2+x} ];
    then
        ssh-copy-id
    else
        ssh-copy-id -i ~/.ssh/$2-$1 $1@$2
    fi
}


