lf() {
  if [[ -n "${1}" ]]; then
    if [[ "${1: -1}" == "/" ]]; then
      ls -G -ld -- "${1}"*(-.)
    elif [[ -d "${1}" ]]; then
      ls -G -ld -- "${1}"/*(-.)
    elif [[ "${1}" =~ "/" ]]; then
      ls -G -ld -- "$(dirname "${1}")"/*"$(basename "${1}")"*(-.)
    else
      ls -G -ld -- *"${1}"*(-.)
    fi
  else
    ls -G -l -- *(-.)
  fi
}

lfa() {
