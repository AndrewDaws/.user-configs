    elif [[ "${1}" =~ "/" ]]; then
      ls -G -ltd -- "$(dirname "${1}")"/*"$(basename "${1}")"* | sed '/total /d' | head -10
    else
      ls -G -ltd -- *"${1}"* | sed '/total /d' | head -10
    fi
