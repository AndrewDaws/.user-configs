# navigation
alias cd..="cd .."
alias cd....="cd ../.."
alias cd/="cd /"

# set default flags
alias ls="ls --color=always -h --si"

unalias -m 'l'
l() {
  if [[ -n "${1}" ]]; then
    if [[ "${1: -1}" == "/" ]]; then
      ls -G -l -- "${1}" | sed '/total /d'
    elif [[ -d "${1}" ]]; then
      ls -G -l -- "${1}"/ | sed '/total /d'
    elif [[ "${1}" =~ "/" ]]; then
      ls -G -ld -- "$(dirname "${1}")"/*"$(basename "${1}")"* | sed '/total /d'
    else
      ls -G -ld -- *"${1}"* | sed '/total /d'
    fi
  else
    ls -G -l -- . | sed '/total /d'
  fi
}

