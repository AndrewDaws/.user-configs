####################
# Variables
####################
# Save dotfiles alias directory to environment variable if not already set
if [ -z "$DOTFILES_ALIAS_PATH" ]; then
  export DOTFILES_ALIAS_PATH="$(dirname $(readlink -f $0))"
fi
####################
####################



####################
# Logins and Configs
####################
alias src="exec ${SHELL}"
alias cdd="cd ${DOTFILES_PATH}"

# zshrc
alias czsh="$EDITOR ${HOME}/.zshrc"
alias szsh="source ${HOME}/.zshrc"

# alias
alias cali="$EDITOR ${DOTFILES_ALIAS_PATH}/alias"
alias sali="source ${DOTFILES_ALIAS_PATH}/.alias"

# oh-my-zsh
alias cozsh="$EDITOR ${HOME}/.oh-my-zsh"
alias sozsh="source ${HOME}/.oh-my-zsh"

# powerlevel10k
alias cp10k="$EDITOR ${DOTFILES_ZSH_PATH}/.p10k.zsh"
alias sp10k="source ${DOTFILES_ZSH_PATH}/.p10k.zsh"

# tmux
alias ctmux="$EDITOR ${HOME}/.tmux.conf"
alias stmux="source ${HOME}/.tmux.conf"
alias ktmux="pkill -f tmux"
####################
####################



####################
# Common
####################
# navigation
alias cd..="cd .."
alias cd....="cd ../.."
alias cd/="cd /"

alias l="ls -lhp --color=always"
alias la="ls -lhpA --color=always"
alias lt="ls -lhpt --color=always | awk 'NR != 1 && NR < 12'"
alias lta="ls -lhptA --color=always | awk 'NR != 1 && NR < 12'"

lf() {
    if [ "$1" != "" ]
    then
        #ls -lhp --color=always $1 | grep -v '^d'
        ls -lhp --color=always -- *(.) | grep -i $1
    else
        ls -lhp --color=always -- *(.)
    fi
}

lfa() {
    if [ "$1" != "" ]
    then
        #ls -lhpA --color=always $1 | grep -v '^d'
        ls -lhpA --color=always -- *(D-.) | grep -i $1
    else
        ls -lhpA --color=always -- *(D-.)
    fi
}

ld() {
    if [ "$1" != "" ]
    then
        ls -lhpd --color=always -- *(/) | grep -i $1
    else
        ls -lhpd --color=always -- *(/)
    fi
}

lda() {
    if [ "$1" != "" ]
    then
        ls -lhpdA --color=always -- *(D-/) | grep -i $1
    else
        ls -lhpdA --color=always -- *(D-/)
    fi
}

alias pa="ps -af"

alias font_refresh="sudo fc-cache -f -v"
